            <!-- Détails de la mission (Overlay) -->
            <div id="detailPanel" class="absolute bottom-6 left-6 right-6 md:left-12 md:right-12 bg-white rounded-2xl shadow-2xl p-6 border-t-8 border-[var(--dix-dark-green)] transform translate-y-[150%] z-[1000] max-w-2xl mx-auto overflow-hidden">
                <button onclick="closeDetails()" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 p-2 rounded-full hover:bg-gray-100 transition-colors">
                    <i data-lucide="x" class="w-6 h-6"></i>
                </button>
                <div class="flex flex-col gap-2">
                    <div class="flex items-center gap-3">
                        <span id="detYear" class="bg-[var(--dix-white-grey)] text-[10px] font-bold px-2 py-1 rounded text-[var(--dix-dark-green)]"></span>
